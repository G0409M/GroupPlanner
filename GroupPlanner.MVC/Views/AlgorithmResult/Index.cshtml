@model List<GroupPlanner.Application.AlgorithmResult.AlgorithmResultDto>
@{
    ViewData["Title"] = "Wyniki algorytmów";
}

<h2>Wyniki algorytmów</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Algorytm</th>
            <th>Data</th>
            <th>Wynik</th>
            <th>Czas działania</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.Algorithm</td>
                <td>@result.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>@result.ResultValue.ToString("F7")</td>
                <td>@result.Duration</td>
                <td>
                    <a asp-action="Details" asp-route-id="@result.Id" class="btn btn-primary btn-sm">Szczegóły</a>
                    @if (result.IsEditable)
                    {
                        <a asp-action="Delete" asp-route-id="@result.Id" class="btn btn-danger btn-sm">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="Run" class="btn btn-success">Uruchom nowy algorytm</a>
</div>

