@model List<GroupPlanner.Application.AlgorithmResult.AlgorithmResultDto>
@{
    ViewData["Title"] = "Algorithm Results";
}

<div class="container my-4">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-calculator display-4 text-success me-3"></i>
            <div>
                <h1 class="h3 mb-0">Algorithm Results</h1>
                <small class="text-muted">Summary of past runs</small>
            </div>
        </div>
        <a asp-action="Run" class="btn btn-success btn-sm">
            <i class="bi bi-play-fill me-1"></i> Run New Algorithm
        </a>
    </div>

    <!-- Results Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Results</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Algorithm</th>
                            <th>Date</th>
                            <th>Score</th>
                            <th>Duration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @result.Algorithm
                                    </span>
                                </td>
                                <td>@result.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td>@result.ResultValue.ToString("F2")</td>
                                <td>@result.Duration</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <!-- Details as GET link -->
                                        <a asp-action="Details"
                                           asp-route-id="@result.Id"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye-fill me-1"></i> Details
                                        </a>

                                        <!-- Delete as POST form -->
                                        @if (result.IsEditable)
                                        {
                                            <form asp-action="DeleteConfirmed"
                                                  asp-route-id="@result.Id"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Delete this result?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash-fill me-1"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
