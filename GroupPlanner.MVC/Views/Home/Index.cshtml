@{
    ViewData["Title"] = "Daily Availability";
}
<h1>Daily Availability</h1>

<!-- Filtry dat -->
<div id="filterContainer">
    <label for="startDate">Start Date:</label>
    <input type="text" id="startDate">
    <label for="endDate">End Date:</label>
    <input type="text" id="endDate">
    <button id="filterButton">Apply Filter</button>
    <button id="resetButton">Reset</button>
</div>
<div id="sitebody">
    <!-- Kontener na wykres i tabelę -->
    <div id="chartTableContainer">
        <div id="chartWrapper">
            <canvas id="availabilityChart"></canvas>
        </div>
        <table id="dataTable">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Hours</th>
                </tr>
            </thead>
            <tbody>
                <!-- Wiersze zostaną wypełnione dynamicznie -->
            </tbody>
        </table>
        <div style="clear:both"></div>
    </div>

    <div style="width: 100%; height: 50px; "></div>
</div>


<!-- Biblioteki -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="~/js/Home/availability-chart.js"></script>
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
<link href="~/css/Availability-chart.css" rel="stylesheet">
