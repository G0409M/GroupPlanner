@{
    ViewData["Title"] = "Daily Availability";
}
<div class="container my-4">

    <!-- Page Header -->
    <div class="mb-4">

        <h1 class="h3 mb-0">Daily Availability</h1>
    </div>

    <!-- Filters Card -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Filter Dates</h5>
        </div>
        <div class="card-body">
            <div class="row gx-3 gy-2 align-items-end">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="text" id="startDate" class="form-control form-control-sm" placeholder="Select start date">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="text" id="endDate" class="form-control form-control-sm" placeholder="Select end date">
                </div>
                <div class="col-md-4 d-flex gap-2 justify-content-end">
                    <button id="resetButton" class="btn btn-outline-secondary btn-sm">Reset</button>
                    <button id="filterButton" class="btn btn-primary btn-sm">Apply</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart & Data Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Availability Overview</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Chart -->
                <div class="col-lg-8 mb-4">
                    <div class="card h-100 border-0">
                        <div class="card-body p-3" style="height:400px;">
                            <canvas id="availabilityChart" class="w-100 h-100"></canvas>
                        </div>
                    </div>
                </div>
                <!-- Table -->
                <div class="col-lg-4">
                    <div id="error-message" class="alert alert-warning d-none"></div>
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-0">
                            <div class="table-responsive" style="max-height:400px; overflow-y:auto;">
                                <table id="dataTable" class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="py-2">Date</th>
                                            <th class="py-2">Hours</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- dynamic rows -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Flatpickr & Chart.js -->
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
<link href="~/css/Availability-chart.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="~/js/Home/availability-chart.js"></script>
