@{
    ViewData["Title"] = "Daily Availability";
}
<div class="container my-4">

    <!-- Nagłówek strony -->
    <div class="mb-4">
        <h1 class="h3">Daily Availability</h1>
    </div>

    <!-- Filtry – karta -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            Filter Dates
        </div>
        <div class="card-body">
            <div class="row gx-3 gy-2 align-items-end">
                <div class="col-auto">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="text" id="startDate" class="form-control form-control-sm">
                </div>
                <div class="col-auto">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="text" id="endDate" class="form-control form-control-sm">
                </div>
                <div class="col-auto">
                    <button id="filterButton" class="btn btn-primary btn-sm">Apply</button>
                    <button id="resetButton" class="btn btn-outline-secondary btn-sm">Reset</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Wykres + tabela – karta -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            Availability Chart & Data
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Wykres -->
                <div class="col-12 col-lg-8 mb-4" style="height:400px;">
                    <canvas id="availabilityChart"></canvas>
                </div>
                <!-- Tabela -->
                <div class="col-12 col-lg-4">
                    <div id="error-message" class="alert alert-warning d-none"></div>
                    <div class="table-responsive" style="max-height:400px; overflow-y:auto;">
                        <table id="dataTable" class="table table-striped table-borderless table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- dynamic rows -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Flatpickr & Chart.js -->
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
<link href="~/css/Availability-chart.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="~/js/Home/availability-chart.js"></script>
