@using GroupPlanner.Application.Task
@model TaskDto

@{
    ViewData["Title"] = "Create Task";
}

<div class="card mx-auto mt-5" style="max-width:600px;">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">New Task</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Task name" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="Task description" style="height:100px;"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Deadline" type="date" class="form-control" placeholder="Deadline" />
                        <label asp-for="Deadline">Deadline</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="Priority" class="form-select" placeholder="Priority">
                            <option value="">Select priority</option>
                            <option value="1">Low</option>
                            <option value="2">Medium</option>
                            <option value="3">High</option>
                            <option value="4">Critical</option>
                        </select>
                        <label asp-for="Priority">Priority</label>
                        <span asp-validation-for="Priority" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="TaskType" class="form-select" placeholder="Task Type">
                            <option value="">Select type</option>
                            <option value="Project">Project</option>
                            <option value="Task">Task</option>
                            <option value="AdditionalTask">Additional Task</option>
                            <option value="Other">Other</option>
                        </select>
                        <label asp-for="TaskType">Task Type</label>
                        <span asp-validation-for="TaskType" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="ProgressStatus" class="form-select" placeholder="Progress Status">
                            <option value="">Select status</option>
                            <option value="NotStarted">Not Started</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <label asp-for="ProgressStatus">Progress Status</label>
                        <span asp-validation-for="ProgressStatus" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success px-4">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
