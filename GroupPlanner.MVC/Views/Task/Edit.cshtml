@model GroupPlanner.Application.Task.Commands.EditTask.EditTaskCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name</h1>

<h4>EditTaskCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group m-3">
                <label class="control-label" asp-for="TaskType">TaskType</label>
                <select class="form-control" asp-for="TaskType">
                    <option value="Projekt">Projekt</option>
                    <option value="Zadanie">Zadanie</option>
                    <option value="Spotkanie">Spotkanie</option>
                    <option value="Inne">Inne</option>
                </select>
                <span asp-validation-for="TaskType" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
