@using GroupPlanner.Application.Task
@model TaskDto
@using GroupPlanner.Application.Subtask
@using GroupPlanner.Domain.Entities

@{
    ViewData["Title"] = "Edit Task";
}
<!-- Page header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center">
        <i class="bi bi-pencil-square display-4 text-warning me-3"></i>
        <div>
            <h1 class="h3 mb-0">Edit “@Model.Name”</h1>
            <small class="text-muted">Modify the task’s properties below</small>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
        <a asp-action="Details" asp-route-encodedName="@Model.EncodedName" class="btn btn-outline-primary">
            <i class="bi bi-eye me-1"></i> Back to Details
        </a>
    </div>
</div>

<div class="row">
    <!-- Left column: Task Settings -->
    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-warning text-white">
                <h5 class="card-title mb-0">Task Settings</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-encodedName="@Model.EncodedName" method="post" novalidate>
                    <input type="hidden" asp-for="EncodedName" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Name -->
                    <div class="mb-3">
                        <input type="hidden" asp-for="Name" class="form-control" />
                        
                    </div>

                    <!-- Task Type -->
                    <div class="mb-3">
                        <label asp-for="TaskType" class="form-label">Type</label>
                        <select asp-for="TaskType" class="form-select">
                            <option value="Project">Project</option>
                            <option value="Task">Task</option>
                            <option value="AdditionalTask">Additional Task</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="TaskType" class="text-danger"></span>
                    </div>

                    <!-- Priority -->
                    <div class="mb-3">
                        <label asp-for="Priority" class="form-label">Priority</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Critical">Critical</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Deadline -->
                    <div class="mb-3">
                        <label asp-for="Deadline" class="form-label">Deadline</label>
                        <input asp-for="Deadline" type="date" class="form-control" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>

                   

                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Right column: Task Overview + Add Subtask -->
    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Task Overview</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                <li class="list-group-item">
                    <strong>Deadline:</strong>
                    <span class="ms-2">
                        @(Model.Deadline.HasValue
                            ? Model.Deadline.Value.ToString("yyyy-MM-dd")
                            : "<em>None</em>")
                    </span>
                </li>
                <li class="list-group-item">
                    <strong>Type:</strong>
                    <span class="badge bg-secondary ms-2">@Model.TaskType</span>
                </li>
                <li class="list-group-item">
                    <strong>Priority:</strong>
                    <span class="badge bg-secondary ms-2">@Model.Priority</span>
                </li>
                
            </ul>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Add Subtask</h5>
            </div>
            <div class="card-body">
                <partial name="_CreateSubtask"
                         model="new SubtaskDto { TaskEncodedName = Model.EncodedName, TaskDeadline = Model.Deadline }" />
            </div>
        </div>
    </div>
</div>

<!-- Subtasks list -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="card-title mb-0">Subtasks</h5>
    </div>
    <div class="card-body">
        <div id="subtasks" class="row g-3" data-encoded-name="@Model.EncodedName" data-edit-mode="true">
            <!-- Edit.js dynamic subtasks -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Task/Edit.js"></script>
}
