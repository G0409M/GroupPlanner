@using GroupPlanner.Application.Task
@model TaskDto

@{
    ViewData["Title"] = "Delete Task";
}

<h1 class="h3 mb-0"> Delate Task</h1>

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this task?
</div>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Deadline:</strong> @Model.Deadline</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Type:</strong> @Model.TaskType</p>
    <p><strong>Status:</strong> @Model.ProgressStatus</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-encodedName="@Model.EncodedName" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>