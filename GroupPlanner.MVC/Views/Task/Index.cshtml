@model IEnumerable<GroupPlanner.Application.Dto.Task.TaskDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<div class="row">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="width:18rem;">
            <div class="card-body">
             <h5 class="card-title"> @item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Deadline</h6>
                <p class="card-text">@item.Description</p>
                <p class="card-text">@item.TaskType</p>
                <a href="#" class="btn btn-primary">Details</a>
                <a href="#" class="btn btn-outline-secondary">Edit</a>
            </div>
        </div>
    }
</div>