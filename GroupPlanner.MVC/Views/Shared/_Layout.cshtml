@using Newtonsoft.Json
@{
    var action = ViewContext.RouteData.Values["Action"]?.ToString();
    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
    var notification = TempData["Notification"] != null
        ? (Notification)JsonConvert.DeserializeObject<Notification>(TempData["Notification"]!.ToString()!)!
        : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Time Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroupPlanner.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.css" />
    <style>
        .navbar-custom {
            background-color: #343a40;
            box-shadow: 0 0 5px rgba(0,0,0,0.3);
        }

            .navbar-custom .nav-link {
                color: #ffffff !important;
            }

                .navbar-custom .nav-link.active {
                    background-color: rgba(255,255,255,0.2);
                    border-radius: 0.5rem;
                    font-weight: 600;
                }

        .footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom navbar-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-clock-history"></i> Time Planner
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-1">
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" && action == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Task" && action == "Index" ? "active" : "")"
                               asp-controller="Task" asp-action="Index">
                                <i class="bi bi-list-check me-1"></i> Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Calendar" && action == "Index" ? "active" : "")"
                               asp-controller="Calendar" asp-action="Index">
                                <i class="bi bi-calendar-week me-1"></i> Calendar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Availability" && action == "Index" ? "active" : "")"
                               asp-controller="Availability" asp-action="Index">
                                <i class="bi bi-clock me-1"></i> Availability
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "AlgorithmResult" && action == "Index" ? "active" : "")"
                               asp-controller="AlgorithmResult" asp-action="Index">
                                <i class="bi bi-cpu me-1"></i> Algorithms
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top py-3 text-center small text-muted">
        &copy; 2024 - Time Planner
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (notification != null)
    {
        <script>
            toastr["@notification.Type"]("@notification.Message");
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
